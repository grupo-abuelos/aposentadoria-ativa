doctype html
html
	head
		meta(charset="utf-8")
		title Aposentadoria Ativa
		link(rel="stylesheet" href="/static/stylesheets/style.css")
		link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous")
	body
		.navbar.container-fluid
			nav
				a(href="#forum") Fórum
				a(href="#aposentadoria") Minha Aposentadoria
				a(href="#perfil") Perfil
		.container-fluid
			div
				textarea#post(type="textarea" placeholder="Em que você está pensando?")
			div
				button.btn.btn-primary(type="submit") Postar
		.container-fluid
			div
				label Filtrar por tópico:
			.container
				.row
					.col
						input#viagem(type="checkbox")
						label(for="viagem") Viagem
					.col
						input#fotografia(type="checkbox")
						label(for="fotografia") Fotografia
					.col
						input#ioga(type="checkbox")
						label(for="ioga") Ioga
					.col
						input#jardinagem(type="checkbox")
						label(for="jardinagem") Jardinagem
				.row
					.col
						input#exercicios(type="checkbox")
						label(for="exercicios") Exercícios
					.col
						input#culinaria(type="checkbox")
						label(for="culinaria") Culinária
					.col
						input#pintura(type="checkbox")
						label(for="pintura") Pintura
					.col
						input#saude(type="checkbox")
						label(for="saude") Saúde
		.container
			if posts
				each post in posts
					.container
						.row
							.col
								a(class="h2", href="")=post.titulo
								p=post.conteudo
							.col
								img(src=post.img, alt="", class="img-fluid img-thumbnail")
						.row
							each tag in post.tags
								.col
									p=tag